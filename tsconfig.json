{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // <-- ADD THIS
    "paths": {      // <-- ADD THIS BLOCK
      "@shared/*": ["shared/*"]
    },
    "rootDir": ".",
    
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}